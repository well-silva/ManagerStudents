<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input type="text" name="name" placeholder="nome do professor" value="{{ teacher.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ teacher.birth}}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="graduation">
            <option value="" disabled selected>Selecione a opção</option>
            <option value="medio" {% if teacher.graduation == 'medio' %} selected {% endif %}>Ensino Médio Completo</option>
            <option value="superior" {% if teacher.graduation == 'superior' %} selected {% endif %}>Superior Completo</option>
            <option value="mestrado" {% if teacher.graduation == 'mestrado' %} selected {% endif %}>Mestrado</option>
            <option value="doutorado" {% if teacher.graduation == 'doutorado' %} selected {% endif %}>Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div class="ensino">
        <span>
            <input type="radio" name="tipoDeAula" value="presencial" {% if teacher.tipoDeAula == 'presencial' %}checked{% endif %}>Presencial
        </span>
        <span>
            <input type="radio" name="tipoDeAula" value="distancia" {% if teacher.tipoDeAula == 'distancia' %}checked{% endif %}>À distância
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="services" placeholder="Separe os serviços prestados por virgula" value="{{ teacher.services }}">
    </div>
</div>

<button type="submit">Salvar</button>